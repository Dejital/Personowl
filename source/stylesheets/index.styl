@import url('https://fonts.googleapis.com/css?family=Karla')
@import url('http://yui.yahooapis.com/pure/0.6.0/pure-min.css')

body
  font-family 'Karla', monospace
  -webkit-font-smoothing antialiased
  font-weight normal
  font-size 1.2em
  background white
  padding 1em 0
  color #222

.divider
  border-bottom 1px solid rgba(0, 0, 0, 0.2)

.page-title
  margin 0

  a
    color inherit

.banner
  height 300px
  width 100%
  text-align center
  display table

.banner-head
  display table-cell
  vertical-align middle
  margin-bottom 0

  img
    border 0.5em solid rgba(0,0,0,0.2)
    margin auto
    max-width 60%

.landing-page h3
  text-align center

.action-area
  text-align center
  margin 3em auto

.header, .content, .footer
  max-width 25em
  margin 1em auto
  padding 0 1em

.footer a
  font-size 90%
  color #888

form
  display inline

a
  color royalblue
  text-decoration none
a:hover
a:focus
  text-decoration underline

.button-warning
  color white
  text-shadow 0 1px 1px rgba(0, 0, 0, 0.2)
  background rgb(202, 60, 60)

.button-xsmall
  font-size 70%

.button-rounded
  border-radius 2em

.pure-form button[type=submit]
  margin 0

ul.contacts-list
  list-style-type none
  padding 0

.contacts-list
  li
    margin 1em 0

  a
    font-weight bold

  .contacts-tag
    padding 0.2em 0.7em
    margin 0.3em 0
    margin-right 2px
    color #fff
    background #999
    font-size 80%
    cursor pointer

  .contacts-date, .contacts-actions, .contacts-tags
    font-size 80%
    display block
    margin 0.3em 0

  .contacts-actions a, .contacts-tags a
    cursor pointer
    margin-right 0.7em

  .contacts-actions a
    color #555

  .contacts-tags a
    color #777

  .expired
    color #ca3c3c

.contacts-list-filter
  width 100%

.interaction, .note
  margin-bottom 1em

  a
    cursor pointer
    color #ca3c3c

.error-message
  color #ca3c3c
