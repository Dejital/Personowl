@import url('https://fonts.googleapis.com/css?family=Karla')
@import url('http://yui.yahooapis.com/pure/0.6.0/pure-min.css')

body
  font-family 'Karla', monospace
  -webkit-font-smoothing antialiased
  font-weight normal
  font-size 1.2em
  max-width 25em
  background cornsilk
  margin 2em auto
  padding 0 1em

form
  display inline

a
  color royalblue
  text-decoration none
a:hover
a:focus
  text-decoration underline

.button-warning
  color white
  text-shadow 0 1px 1px rgba(0, 0, 0, 0.2)
  background rgb(202, 60, 60)

.button-xsmall
  font-size 70%

.button-rounded
  border-radius 2em

.pure-form button[type=submit]
  margin 0

ul.contacts-list
  list-style-type none
  padding 0

.contacts-list
  li
    margin 1em 0

  a
    font-weight bold

  .contacts-tag
    padding 0.2em 0.7em
    margin-right 2px
    color #fff
    background #999
    font-size 80%
    cursor pointer

  .contacts-date
    font-size 80%
    display block

.contacts-list-filter
  width 100%

.interaction, .note
  margin-bottom 1em

  a
    cursor pointer
    color #ca3c3c

